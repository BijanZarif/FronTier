CXX=@CXX@
F77=@F77@
F77_LIBS=@F77_LIBS@

libext = @libext@
incs =  @ftlibincs@
libincs = @otherlibsinc@
libs = @otherlibs@
build_cpu = @build_cpu@
incsloc = -I. -I../iFluid -I../include

PETSC = yes
PETSC_ARCH=@PETSC_ARCH@
PETSC_DIR=@PETSC_DIR@

Petsc_Include=@PETSC_INCLUDE@
Petsc_Lib=@PETSC_LIB@
cell : @devel@

solver.o : ../iFluid/solver.h ../iFluid/solver.cpp
	${CXX} -c ../iFluid/solver.cpp $(incsloc) $(incs) ${Petsc_Include}

parab.o : ../iFluid/solver.h ../iFluid/parab.cpp
	${CXX} -c ../iFluid/parab.cpp $(incsloc) $(incs) ${Petsc_Include}

cell: cell.h cell.cpp solver.o parab.o
	${CXX} -c cell.cpp -I../include $(incsloc) $(incs) ${Petsc_Include}
	$(CXX) -o cell cell.o -I../include -L../lib/${build_cpu} solver.o parab.o ${Petsc_Lib} -L../lib/${build_cpu} -lFronTier $(libincs)  $(libs) ${F77_LIBS}

-include ../devel-deps.inc

clean:
	rm -rf *.o cell 
output :
	rm -rf out/*

gif :
	hdf2gif out/intfc.hdf out/intfc.gif

TagsFile:
	ctags *.h *.cpp ../iFluid/solver.h ../iFluid/solver.cpp ../iFluid/parab.cpp ../src/front/*.[ch] ../src/intfc/*.[ch] ../src/util/*.[ch]

tagsfile:
	ctags *.h *.cpp ../iFluid/solver.h ../iFluid/solver.cpp ../iFluid/parab.cpp ../src/front/*.[ch] ../src/intfc/*.[ch] ../src/util/*.[ch]

etagsfile:
	etags *.h *.cpp ../iFluid/solver.h ../iFluid/solver.cpp ../iFluid/parab.cpp ../src/front/*.[ch] ../src/intfc/*.[ch] ../src/util/*.[ch]
