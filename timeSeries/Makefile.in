CXX=mpicxx -g -pedantic -Wno-long-long
F77=mpif77 -g

libext = @libext@
incs =  @ftlibincs@
libincs = @otherlibsinc@
libs = @otherlibs@
build_cpu = @build_cpu@
incsloc = -I. -I../include

PETSC = yes
PETSC_ARCH=@PETSC_ARCH@
PETSC_DIR=@PETSC_DIR@

Petsc_Include=@PETSC_INCLUDE@
Petsc_Lib=@PETSC_LIB@

timeSeries: FT_libs timeSeries.h timeSeries.cpp timesub.o
	rm -f timeSeries
	$(CXX) -c -I../include $(incs) timeSeries.cpp
	$(CXX) timeSeries.o timesub.o -I../include -L../lib/x86_64  $(libincs) -lFronTier -lm $(libs) -o timeSeries

timesub.o : timeSeries.h timesub.cpp
	${CXX} -c -I. -I../include $(incs) timesub.cpp

-include ../devel-deps.inc

clean:
	rm -rf *.o wave
tagsfile:
	ctags *.cpp ../src/*/*.[chf] ../src/*/*/*.[chf]
