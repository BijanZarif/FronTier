CC=@CXX@
CXX=@CXX@
F77=@F77@
F77_LIBS=@F77_LIBS@

libext = @libext@
incs =  @ftlibincs@
libincs = @otherlibsinc@
libs = @otherlibs@
build_cpu = @build_cpu@
incsloc = -I. -I../include

PETSC = yes
PETSC_ARCH=@PETSC_ARCH@
PETSC_DIR=@PETSC_DIR@

Petsc_Include=@PETSC_INCLUDE@
Petsc_Lib=@PETSC_LIB@

USEGPU = @USEGPU@

all: cFluid ../lib/libcF.a

cFluid : @devel@

cFtvd.o : cFluid.h cFtvd.cpp
	${CXX} -c cFtvd.cpp $(incsloc) $(incs) ${Petsc_Include}

cFweno.o : cFluid.h cFweno.cpp
	${CXX} -c cFweno.cpp $(incsloc) $(incs) ${Petsc_Include}

cFsub.o : cFluid.h cFsub.cpp
	${CXX} -c cFsub.cpp $(incsloc) $(incs) ${Petsc_Include}

cFcartsn.o : cFluid.h cFcartsn.cpp
	${CXX} -c cFcartsn.cpp $(incsloc) $(incs) ${Petsc_Include}

cFbase.o : cFluid.h cFbase.cpp
	${CXX} -c cFbase.cpp $(incsloc) $(incs) ${Petsc_Include}

cFphys.o : cFluid.h cFphys.cpp
	${CXX} -c cFphys.cpp $(incsloc) $(incs) ${Petsc_Include}

cFinit.o : cFluid.h cFinit.cpp
	${CXX} -c cFinit.cpp $(incsloc) $(incs) ${Petsc_Include}

cFeos.o : cFluid.h cFeos.cpp
	${CXX} -c cFeos.cpp $(incsloc) $(incs) ${Petsc_Include}

cFluid.o : cFluid.h cFluid.cpp
	${CXX} -c cFluid.cpp -I../include $(incs) ${Petsc_Include}

ifeq ($(USEGPU),no)

cFluid: cFluid.h cFluid.o cFtvd.o cFweno.o cFsub.o cFcartsn.o cFbase.o cFphys.o cFinit.o cFeos.o
	$(CXX) -o cFluid cFluid.o -g -I../include -L../lib/${build_cpu}  cFtvd.o cFweno.o cFsub.o cFcartsn.o cFbase.o cFphys.o cFinit.o cFeos.o ${Petsc_Lib} -L../lib/${build_cpu} -lFronTier $(libincs)  $(libs) ${F77_LIBS}

else

cFweno_gpu.o: cFweno_gpu.cuh cFweno_gpu.cu
	nvcc -arch sm_20 -c -I. -I../include cFweno_gpu.cu

cFluid: cFluid.h cFweno_gpu.cuh cFluid.o cFtvd.o cFweno.o cFsub.o cFcartsn.o cFbase.o cFphys.o cFinit.o cFeos.o cFweno_gpu.o
	$(CXX) -o cFluid cFluid.o -g -I../include -L../lib/${build_cpu}  cFtvd.o cFweno.o cFsub.o cFcartsn.o cFbase.o cFphys.o cFinit.o cFeos.o cFweno_gpu.o ${Petsc_Lib} -L../lib/${build_cpu} -lFronTier $(libincs)  $(libs) ${F77_LIBS} /usr/local/cuda/lib64/libcudart.so

endif

../lib/libcF.a: cFtvd.o cFweno.o cFsub.o cFcartsn.o cFbase.o cFphys.o cFinit.o cFeos.o
	$(AR) cru libcF.a $<
	ranlib libcF.a; mv libcF.a ../lib/$(build_cpu)/libcF.a

-include ../devel-deps.inc

clean:
	rm -rf *.o cFluid ../lib/$(build_cpu)/libcF.a 
output :
	rm -rf out/*

TagsFile:
	ctags *.h *.cpp ../src/front/*.[ch] ../src/intfc/*.[ch] ../src/util/*.[ch]

tagsfile:
	ctags *.h *.cpp ../src/front/*.[ch] ../src/intfc/*.[ch] ../src/util/*.[ch]

etagsfile:
	etags *.h *.cpp ../src/front/*.[ch] ../src/intfc/*.[ch] ../src/util/*.[ch]
