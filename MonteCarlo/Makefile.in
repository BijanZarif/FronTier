CXX=mpicxx -g -pedantic -Wno-long-long
F77=mpif77 -g

libext = @libext@
incs =  @ftlibincs@
libincs = @otherlibsinc@
libs = @otherlibs@
build_cpu = @build_cpu@
incsloc = -I. -I../include

PETSC = yes
PETSC_ARCH=@PETSC_ARCH@
PETSC_DIR=@PETSC_DIR@

Petsc_Include=@PETSC_INCLUDE@
Petsc_Lib=@PETSC_LIB@

MonteCarlo: FT_libs MonteCarlo.h MonteCarlo.cpp MCsub.o
	rm -f MonteCarlo
	$(CXX) -c -I../include $(incs) MonteCarlo.cpp
	$(CXX) MonteCarlo.o MCsub.o -I../include -L../lib/x86_64  $(libincs) -lFronTier -lm $(libs) -o MonteCarlo

MCsub.o : MonteCarlo.h MCsub.cpp
	${CXX} -c -I. -I../include $(incs) MCsub.cpp

-include ../devel-deps.inc

clean:
	rm -rf *.o wave
tagsfile:
	ctags *.cpp ../src/*/*.[chf] ../src/*/*/*.[chf]
